#!/usr/bin/env php
<?php
//  -d memory_limit=512M

use App\Command as C;

require __DIR__ . '/../vendor/autoload.php';

// Create application
$app = new Symfony\Component\Console\Application('Advent of Code', '2019.0.1');

// Load commands into application
$app->add(new C\Day1Part1Command());
$app->add(new C\Day1Part2Command());
$app->add(new C\Day2Part1Command());
$app->add(new C\Day2Part2Command());
$app->add(new C\Day3Part1Command());
$app->add(new C\Day3Part2Command());
$app->add(new C\Day4Part1Command());
$app->add(new C\Day4Part2Command());
$app->add(new C\Day5Part1Command());
$app->add(new C\Day5Part2Command());

// And finally, execute
try {
    $app->run();
} catch (Exception $exception) {
    printf(
        "Caught exception on %s:%d: [%d] %s\n",
        $exception->getFile(),
        $exception->getLine(),
        $exception->getCode(),
        $exception->getMessage()
    );
    exit(1);
}
exit(0);